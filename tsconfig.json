{
    "compilerOptions": {
        "moduleResolution": "node",
        "module": "ES6",
        "target": "ES2015",
        "lib": ["ES2015", "DOM"],
        "allowSyntheticDefaultImports": true,
        "noImplicitAny": true,
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "allowJs": true,
        "baseUrl": "./src/",
        "paths": {
            "components/*": ["./components/*"],
            "library/*": ["./library/*"],
            "*": ["src/typings/*"]
        }
    },
    "include": ["./src/**/*.ts"]
}
