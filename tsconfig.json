{
    "compilerOptions": {
        "allowSyntheticDefaultImports": true,
        "noImplicitAny": true,
        "module": "ES2015",
        "target": "ES2015",
        "lib": ["ES2015", "DOM"],
        "moduleResolution": "node",
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "allowJs": true,
        "baseUrl": "./src/",
        "typeRoots": ["./node_modules/@types", "./node_modules/@miracledevs", "./src/typings"],
        "paths": {
            "components": ["./components/*" ],
            "library": ["./library/*"]
        }
    },
    "include": ["./src/**/*.ts"]
}
